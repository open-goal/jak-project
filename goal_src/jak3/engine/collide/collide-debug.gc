    (set! (-> s5-0 ignore-process1) #f)
    (add-debug-box
      #t
      (bucket-id debug)
      (the-as vector (-> s5-0 bbox))
      (-> s5-0 bbox max)
      (if (logtest? (current-time) 128)
          (new 'static 'rgba :r #x80 :g #x80 :b #x80 :a #x20)
          (new 'static 'rgba :a #x20)
          )
      )
    (fill-using-bounding-box *collide-cache* s5-0)
