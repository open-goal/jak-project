   (buffer-start                    uint32)
   (buffer-end                      uint32)
   (tfrag-dists                     uint32)
   (alpha-dists                     uint32)
   (water-dists                     uint32)
   )
  )


(deftype instance-tie-dma (structure)
  "Scratchpad memory layout for TIE instance DMA generation."
  ((banka  instance-tie       32 :inline)
   (bankb  instance-tie       32 :inline)
   (outa   uint128            256)
   (outb   uint128            256)
   (work   instance-tie-work  :dynamic)
   )
  )


