(defenum sp-field-id
  :type uint16
  )

(defenum sp-flag
  :type uint16
  )

(defenum sp-group-item-flag
  :bitfield #t
  :type uint16
  )

(defenum sp-launch-state-flags
  :bitfield #t
  :type uint16
  )

(defenum sp-group-flag
  :bitfield #t
  :type uint16
