(defun draw-build-revision ()
  (with-dma-buffer-add-bucket ((buf (-> (current-frame) global-buf))
                                     (bucket-id debug-no-zbuf1))
          (draw-string-xy *pc-settings-built-sha*
                          buf
                          0 10
                          (font-color flat-yellow)
                          (font-flags shadow kerning))))

