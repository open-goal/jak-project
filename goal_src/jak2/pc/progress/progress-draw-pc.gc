        (full-h 199)
        )
    (case (get-aspect-ratio)
      (('aspect16x9)
        (set! title-y 69)
        (set! full-w 355)
        (set! full-h 233)
        (*! arg5 1.25)
        )
      )
    (when (not (-> *pc-settings* use-vis?))
      (set! title-x (the int (adjust-game-x (the float title-x))))
      (set! full-w (the int (* (-> *pc-settings* aspect-ratio-reciprocal) full-w)))
