            )
      (set! sv-148 (- s4-0 (/ (* s5-0 (length gp-0)) 2)))
      (set! sv-152 (new 'stack-no-clear 'hud-box))
      (set! sv-156 (and (!= (-> self current) 'main) (or (= (-> self next) 'none) (> (-> self state-pos) 0))))
      (if sv-156
