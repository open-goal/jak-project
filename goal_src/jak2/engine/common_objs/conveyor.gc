                 (the-as object (new 'process 'ambient-sound (static-sound-spec "conveyor" :fo-max 80) (-> this root trans)))
                 )
               )
           (set! (-> this sound) (the-as ambient-sound sound))
           sound
           )
         )
        (else
          (set! (-> this sound) (the-as ambient-sound 0))
          0
          )
        )
      )
    )
  )

