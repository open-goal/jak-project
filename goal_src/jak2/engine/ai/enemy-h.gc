(defmethod clear-focused enemy-focus ((obj enemy-focus))
  (let ((t9-0 (method-of-type focus clear-focused)))
    (t9-0 obj)
    )
  (set! (-> obj aware) (enemy-aware enemy-aware-0))
  (logclear! (-> obj flags) (enemy-flag lock-focus))
  (none)
  )
