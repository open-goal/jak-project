           (format sv-16 " #x~6X~%" sv-72)
           )
          ((= v1-22 (history-channel friction))
           (let ((f30-0 (-> sv-40 vector x)))
             (format sv-16 "~-15S: ~f~%" (history-channel->string (-> sv-40 channel)) f30-0)
