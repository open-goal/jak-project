          (set! (-> (the-as dma-packet a0-17) vif0) (new 'static 'vif-tag))
          (set! (-> (the-as dma-packet a0-17) vif1) (new 'static 'vif-tag :imm #x2 :cmd (vif-cmd direct) :msk #x1))
          (set! (-> v1-13 base) (&+ (the-as pointer a0-17) 16))
