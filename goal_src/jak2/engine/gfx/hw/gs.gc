(deftype gs-rgbaq (uint64)
  ((r uint8 :offset   0 :size   8)
   (g uint8 :offset   8 :size   8)
   (b uint8 :offset  16 :size   8)
   (a uint8 :offset  24 :size   8)
   (q float :offset  32 :size  32)
   )
  :method-count-assert 9
  :size-assert         #x8
  :flag-assert         #x900000008
  )

