(defmethod go-hostile citizen-enemy ((this citizen-enemy))
  (if (not (and (-> this next-state) (= (-> this next-state name) 'hostile)))
      (go (method-of-object this hostile))
      )
  )

(defmethod go-stare citizen-enemy ((this citizen-enemy))
