  (vector-reset! (-> self root-override transv))
  (initialize-skeleton
    self
    (the-as skeleton-group (art-group-get-by-name *level* "skel-jinx-bomb" (the-as (pointer uint32) #f)))
    (the-as pair 0)
    )
  (ja-channel-push! 1 0)
  (ja :group! jinx-bomb-idle-ja :num! min)
  (transform-post)
  (go-virtual idle)
  (none)
  )
