  )


(defmethod relocate racer ((this racer) (arg0 int))
  (countdown (v1-0 2)
    (if (-> this path-data v1-0)
        (&+! (-> this path-data v1-0) arg0)
        )
    )
  (the-as racer ((method-of-type process-drawable relocate) this arg0))
  )

