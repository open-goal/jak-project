            (ja :group! racer-racer-idle-ja)
            (set! (-> self root-override root-prim prim-core action) (collide-action solid attackable-unused))
            (set! (-> self root-override root-prim prim-core offense) (collide-offense indestructible))
            (ja-post)
            )
