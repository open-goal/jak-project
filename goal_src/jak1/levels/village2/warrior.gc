  (set! (-> this tasks) (get-task-control (game-task village2-warrior-money)))
  (set! (-> this sound-flava) (music-flava warrior))
  (set! (-> this draw light-index) (the-as uint 3))
  (process-taskable-method-42 this)
  (none)
  )
