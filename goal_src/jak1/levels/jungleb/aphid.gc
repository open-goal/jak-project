(defskelgroup *aphid-sg* aphid-lurker aphid-lurker-lod0-jg -1
              ((aphid-lurker-lod0-mg (meters 999999)))
              :bounds (static-spherem 0 2 0 2)
              :shadow aphid-lurker-shadow-mg
