                         )
                        (else
                          0.0
                          )
                        )
                )
          )
      (when (and s5-0 (or (= f0-16 0.0) (= f0-16 1.0)))
        (set! s5-0 #f)
        (if (= f0-16 0.0)
            (set! (-> obj flags) (logior (water-flags wt19) (-> obj flags)))
            (logclear! (-> obj flags) (water-flags wt19))
