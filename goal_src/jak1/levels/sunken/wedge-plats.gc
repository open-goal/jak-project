      (suspend)
      (ja :num! (seek! (ja-aframe 60.0 0)))
      )
    (ja-no-eval :group! (-> self draw art-group data 3)
                :num! (seek! (ja-aframe 100.0 0))
                :frame-num (ja-aframe 60.0 0)
