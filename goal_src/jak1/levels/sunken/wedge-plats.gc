                     )
            )
    )
  :trans (the-as (function none :behavior wedge-plat) plat-trans)
  :code (behavior ()
    (ja-no-eval :group! (-> self draw art-group data 3)
                :num! (seek! (ja-aframe 60.0 0))
                :frame-num (ja-aframe 0.0 0)
