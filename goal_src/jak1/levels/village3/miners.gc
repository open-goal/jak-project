(defbehavior miners-anim-loop minershort ()
  (when (!= (ja-group) (get-art-elem self))
    (ja-channel-push! 1 (seconds 0.2))
    (ja :group! (get-art-elem self))
    )
  (loop
    (suspend)
    (ja :num! (loop! 2.0))
    (if (= (-> self next-state name) 'idle)
        (process-taskable-method-43 self)
        )
    )
  (the-as none 0)
  (none)
  )

