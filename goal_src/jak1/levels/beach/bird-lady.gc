(defmethod process-taskable-method-43 bird-lady ((this bird-lady))
  (when (ambient-control-method-10 (-> this ambient) (new 'stack-no-clear 'vector) (seconds 30) 122880.0 this)
    (let ((f0-2 (rand-float-gen)))
      (cond
        ((< 0.66 f0-2)
         (play-ambient (-> this ambient) "BIR-LO02" #f (-> this root-override trans))
         )
        ((< 0.33 f0-2)
         (play-ambient (-> this ambient) "BIR-LO03" #f (-> this root-override trans))
         )
        (else
          (play-ambient (-> this ambient) "BIR-am08" #f (-> this root-override trans))
          )
        )
      )
    )
  )

