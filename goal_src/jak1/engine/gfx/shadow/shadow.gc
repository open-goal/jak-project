        (set! (-> t0-5 px) (-> arg0 x))
        (set! (-> t0-5 py) (-> arg0 y))
        (set! (-> t0-5 pz) (-> arg0 z))
        (set! (-> t0-5 scale) arg2)
        (set! (-> t0-5 qx) (-> arg1 x))
        (set! (-> t0-5 qy) (-> arg1 y))
        (set! (-> t0-5 qz) (-> arg1 z))
        (set! (-> t0-5 flags) arg3)
        )
