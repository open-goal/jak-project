(define ct32-24-block-table
    (new 'static 'boxed-array :type int32 :length 32
         0 1 4 5 16 17 20 21 2 3 6 7 18 19 22 23 8 9 12 13 24 25 28 29 10 11 14 15 26 27 30 31))

