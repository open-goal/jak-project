(defun font-set-tex0 ((ptr-tex0 (pointer gs-tex0)) (tex texture) (tex-addr uint) (psm uint) (clut-addr uint))
  "Write the TEX0 parameters for a font"

  (set! (-> ptr-tex0) (new 'static 'gs-tex0
                                  :tcc #x1
                                  :cld #x1
                                  :cbp clut-addr
                                  :th (log2 (-> tex h))
                                  :tw (log2 (-> tex w))
                                  :tbw (-> tex width 0)
                                  :tbp0 (sar tex-addr 6)
                                  :psm psm
                                  ))
  (none)
  )


