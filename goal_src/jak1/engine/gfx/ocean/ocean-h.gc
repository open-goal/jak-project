   (tex0   vector :inline)
   (tex1   vector :inline)
   (tex2   vector :inline)
   (tex3   vector :inline)
   (clr0   vector :inline)
   (clr1   vector :inline)
   (clr2   vector :inline)
   (clr3   vector :inline)
