   (y           float    :offset   4)
   (z           float    :offset   8)
   (sx          float    :offset  12)
   (sy          float    :offset  28)
   (qx          float    :offset  16)
   (qy          float    :offset  20)
   (qz          float    :offset  24)
   (r           float    :offset  32)
   (g           float    :offset  36)
   (b           float    :offset  40)
   (a           float    :offset  44)
   (trans       vector3s :inline :offset   0)
   (rot         vector3s :inline :offset  16)
