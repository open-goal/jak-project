(deftype progress-carousell-state (structure)
  ((int-backup           int)
   (symbol-backup        symbol)
   (subtitle-backup      pc-language)
   (aspect-native-choice symbol)
   (current-carousell    (array text-id))
   (selection            int)
   (direction            symbol)
   (transition           symbol)
