(deftype type000 (basic)
  (
   (pad int32)
   (x basic-type)
   )
  )


(let ((obj000 (new-type-hack type000))
      (bo (new-type-hack basic-type))
      )
  (set! (-> obj000 x) bo)
  (expect (-> obj000 x type) basic-type)
  )


