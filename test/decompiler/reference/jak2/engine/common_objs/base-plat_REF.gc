    (if (logtest? (-> this state-actor extra perm status) (entity-perm-status subtask-complete))
        (set! (-> this locked) (logtest? (-> this flags) (eco-door-flags ecdf01)))
        (set! (-> this locked) (logtest? (-> this flags) (eco-door-flags ecdf00)))
        )
    )
  0
  (none)
  )

