;; definition for method 32 of type cty-guard-turret-button
(defmethod idle-state-transition ((this cty-guard-turret-button))
  "If `button-status` has [[button-status:0]] set, transition to [[basebutton::27]] otherwise, [[basebutton::30]]"
  (setup-masks (-> this draw) 0 -1)
  (cond
    ((logtest? (-> this button-status) (button-status pressed))
     (format #t "off~%")
     (setup-masks (-> this draw) 4 0)
     (setup-masks (-> this draw) 1 0)
     (go (method-of-object this down-idle))
     )
    (else
      (format #t "on~%")
      (setup-masks (-> this draw) 4 0)
      (setup-masks (-> this draw) 2 0)
      (go (method-of-object this pop-up))
      )
    )
  )

