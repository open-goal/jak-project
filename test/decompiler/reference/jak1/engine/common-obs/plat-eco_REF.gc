    (t9-0 this)
    )
  (format #t "~T~Tnotice-dist: ~f~%" (-> this notice-dist))
  (format #t "~T~Tsync-offset-dest: ~f~%" (-> this sync-offset-dest))
  (format #t "~T~Tsync-offset-faux: ~f~%" (-> this sync-offset-faux))
