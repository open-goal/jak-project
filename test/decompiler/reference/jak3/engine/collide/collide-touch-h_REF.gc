  (format #t "~1Tcprim: ~A~%" (-> this cprim))
  (format #t "~1Thas-tri?: ~A~%" (-> this has-tri?))
  (format #t "~1Ttri: #<collide-tri-result @ #x~X>~%" (-> this tri))
  (label cfg-4)
  this
  )

