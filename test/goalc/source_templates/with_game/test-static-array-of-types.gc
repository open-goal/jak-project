;; make a type
(deftype test-struct (structure)
  ((str string)))

(deftype test-basic (basic)
  ((num int32)))

;; declare an array that stores these types
(define test-array (new 'static 'boxed-array :type type test-struct test-basic))

;; use the array to make something
(define test-instance-struct
  (new 'static (-> test-array 0) :str "hello-world"))

(define test-instance-basic
  (new 'static (-> test-array 1) :num 1234))

(-> test-instance-struct str)
(-> test-instance-basic num)
