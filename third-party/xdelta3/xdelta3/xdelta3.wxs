            </Directory>

            <Feature Id='Complete'
                     Level='1'>
              <ComponentRef Id='Main' />
              <ComponentRef Id='Readme' />
              <ComponentRef Id='Copyright' />
              <ComponentRef Id='Source' />
            </Feature>

